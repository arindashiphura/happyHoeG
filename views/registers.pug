doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Signup Page
    link(rel='stylesheet' href='/css/form.css')
  body
    main.form-section(style='background-color: rgb(24, 210, 24);')
      h1 Register Here
      form#register-form(method='post' action='/register')
        label(for='username') Username:
        input#username(type='text' name='username' placeholder='Enter Username' required='')
        br
        label(for='email') Email:
        input#email(type='email' name='email' placeholder='Enter Email' required='')
        br
        label(for='password') Password:
        input#password(type='password' name='password' placeholder='Enter Password' required='')
        br
        label(for='confirm-password') Confirm Password:
        input#confirm-password(type='password' name='confirm-password' placeholder='Confirm Password' required='')
        span#passwordError.error
        br
        label(for='branch') Branch:
        select#branch(name='branch' required='')
          option(value='maganju') Maganjo
          option(value='matuga') Matuga
        br
        label(for='role') Role:
        select#role(name='role' required='')
          option(value='administrator') Administrator
          option(value='manager') Manager
          option(value='sales_agent') Sales Agent
        br
        input.btn.btn-primary.custom-button(type='submit' value='Register')
        p
