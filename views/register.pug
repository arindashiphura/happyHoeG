doctype html
head
  title Registration Page
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/css/form.css')
  script(src='/path/to/form-validation.js' defer='')
video.video-background(autoplay='' muted='' loop='')
  source(src='https://media.gettyimages.com/id/1972673543/video/happy-little-girl-choosing-a-cereal-from-the-shelf-helping-her-mom-shop-for-groceries-at-the.mp4?s=mp4-640x640-gi&k=20&c=XoaIU-pxxRhiEHgrNuVzzgS2qdkbvpnx0jxY0vspryg=' type='video/mp4')
  |         Your browser does not support the video tag.
main.form-section
  h1 Register Here
  form#register-form(action='/newuser' method='POST')
    label(for='username') Username:
    input#username(type='text' name='username' placeholder='Enter Username')
    span#usernameError.error
    br
    label(for='email') Email:
    input#email(type='email' name='email' placeholder='Enter Email')
    span#emailError.error
    br
    label(for='password') Password:
    input#password(type='password' name='password' placeholder='Enter Password')
    span#passwordError.error
    br
    label(for='confirm-password') Confirm Password:
    input#confirm-password(type='password' name='confirm-password' placeholder='Confirm Password')
    span#confirmPasswordError.error
    br
    label(for='branch') Branch:
    select#branch(name='branch' required='')
      option(value='') Select Branch
      option(value='maganjo') Maganjo
      option(value='matuga') Matuga
    br
    label(for='role') Role:
    select#role(name='role' required='')
      option(value='') Select Role
      option(value='manager') Manager
      option(value='sales_agent') Sales Agent
    br
    input.btn.btn-primary.custom-button(type='submit' value='Register')
    p
      | Already have an account? 
      a(href='loginkgl') Login here
script(src='/js/signup.js')