div.stock-container
      if sales
        .report-card
          h3 Total Sales
          p Amount: #{Totalpay.total} 
      else
        p No sales data available

      // Credits Card
      if credits
        .report-card
          h3 Total Credits
          p Amount: #{credits.totalAmount}
      else
        p No credits data available

      // Expenditure Card
      if expenditures
        .report-card
          h3 Total Expenditure
          p Amount: #{expenditures.totalAmount}
      else
        p No expenditure data available

      // Profits Card
      if profits
        .report-card
          h3 Total Profits
          p Amount: #{profits.totalAmount}
      else
        p No profit data available
