.container.tm-mt-big.tm-mb-big
    .col-xl-9.col-lg-10.col-md-12.col-sm-12.mx-auto
      .tm-bg-primary-dark.tm-block.tm-block-h-auto
        .row
          .col-12
            h2.tm-block-title.d-inline-block Make credits
        // <div class="row tm-edit-product-row">
        // <div class="col-xl-6 col-lg-6 col-md-12">
        form#creditForm(action=`/credit/${produce._id}` method="POST" credit)
          // <div class="form-group mb-3">
          div
            label(for='buyerName') Name of the Buyer:
            input#buyerName(type='text' name='buyerName')
            span#buyerNameError
          
          div
            label(for='nationalId') National ID (NIN):
            input#nationalId(type='text' name='nationalId')
            span#nationalIdError
          
          div
            label(for='location') Location:
            input#location(type='text' name='location')
            span#locationError
          
          div
            label(for='contacts') Contacts (Phone):
            input#contacts(type='tel' name='contacts' )
            span#contactsError
          
          div
            label(for='branch') Branch Name:
            select#branch(name='branch')
              option(value='') Select Branch
              option(value='MATUGA') Matuga
              option(value='MAGANJO') Maganjo
            span#branchError
          
          div
            label(for='salesAgentName') Sales Agent Name:
            select#salesAgentName(type='text' name='salesAgentName')
              if agents.length
                each agent in agents
                  option(value=agent._id) #{agent.username}
            span#salesAgentNameError
          
          div
            label(for='dueDate') Due Date:
            input#dueDate(type='date' name='dueDate')
            span#dueDateError
          
          div
            label(for='produceName') Produce Name:
            select#produceName(type='text' name='produceName')
              option(value=produce._id) #{produce.producename}
            span#produceNameError
          
          div
            label(for='produceType') Produce Type:
            input#produceType(type='text' name='produceType')
            span#produceTypeError
          
          div
            label(for='tonnage') Tonnage:
            input#tonnage(type='number' name='creditTonnage')
            span#tonnageError
          
          div
            label(for='amountperkg') Amount Due per kg(UGX):
            input#amountperkg(type='text' name='amountprkg')
            span#amountperkgError
          
          div
            label(for='amountDue') Amount Due (UGX):
            input#amountDue(type='text' name='amountDue')
            span#amountDueError
          
          div
            label(for='dispatchDate') Date of Dispatch:
            input#dispatchDate(type='date' name='dispatchDate')
            span#dispatchDateError
          
          button(type='submit') Submit


