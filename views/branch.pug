doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Produce by Branch
        link(rel="stylesheet", href="/css/styles.css")
    body 
        h3 Produce by Branch

        if totalProduceByBranch && totalProduceByBranch.length
            .branch-cards-container
                // Card 1: Total Tonnage of Each Branch
                each branch in totalProduceByBranch
                    .card
                        h4 Branch: #{branch._id}  
                        p Total Tonnage: #{branch.totalTonnage}
                
                // Card 2: Total Selling Price of Each Branch
                each branch in totalProduceByBranch
                    .card
                        h4 Branch: #{branch._id} 
                        p Total Selling Price: #{branch.totalSellingPrice}
                
                // Card 3: Number of Produce Items for Each Branch
                each branch in totalProduceByBranch
                    .card
                        h4 Branch: #{branch._id} 
                        p Number of Produce Items: #{branch.totalItems}
                
                // Optional: Adjust the layout if you want a different order or specific arrangement
        else
            p No produce data available by branch
