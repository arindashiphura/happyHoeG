.container.tm-mt-big.tm-mb-big
    .col-xl-9.col-lg-10.col-md-12.col-sm-12.mx-auto
      .tm-bg-primary-dark.tm-block.tm-block-h-auto
        .row
          .col-12
            h2.tm-block-title.d-inline-block edit Sales
        // <div class="row tm-edit-product-row">
        // <div class="col-xl-6 col-lg-6 col-md-12">
        form#editSale(action='/edit_sale/' + sale._id method='POST' name='editSale')
            div.form-group.mb-3
                label(for='producename') Produce Name:
                select#produceName(type='text' name='producename' )
                  option #{sale.producename.producename}
                span#producenameError.error

            div.form-group.mb-3
                label(for='produceType') Produce Type:
                input#produceType(type='text' name='produceType' value=sale.produceType )
                span#produceTypeError.error

            div.form-group.mb-3
                label(for='tonnage') Tonnage (in kgs):
                input#tonnage(type='number' name='saleTonnage' value=sale.saleTonnage )
                span#tonnageError.error

            div.form-group.mb-3
                label(for='amountPaid') Amount Paid (in UGX):
                input#amountPaid(type='number' name='amountPaid' value = sale.amountPaid )
                span#amountPaidError.error

            div.form-group.mb-3
                label(for='buyerName') Buyer&apos;s Name:
                input#buyerName(type='text' name='buyerName' value = sale.buyerName )
                span#buyerNameError.error

            div.form-group.mb-3
                label(for='salesAgent') Sales Agent&apos;s Name:
                select#salesAgentName(name='salesAgent' )
                  if agents.length 
                    each agent in agents 
                      option(value=agent._id) #{agent.username}
                span#salesAgentNameError.error

            div.form-group.mb-3
                label(for='Salesdate') Date and Time:
                input#dateTime(type='datetime-local' name='dateTime' value=sale.dateTime )
                span#dateTimeError.error

            div.form-group.mb-3
              label(for='branch') Branch Name:
              select#branch.form-control(name='storeBranch' )
                  option(value='' disabled='' selected=!sale.storeBranch) Select Branch
                  option(value='Matuga' selected=sale.storeBranch === 'Matuga') Matuga
                  option(value='Mganjo' selected=sale.storeBranch === 'Mganjo') Mganjo
              span#branchError.error

              button.btn.btn-primary(type='submit') Update Sale

