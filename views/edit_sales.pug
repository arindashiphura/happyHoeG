.container.tm-mt-big.tm-mb-big
    .col-xl-9.col-lg-10.col-md-12.col-sm-12.mx-auto
      .tm-bg-primary-dark.tm-block.tm-block-h-auto
        .row
          .col-12
            h2.tm-block-title.d-inline-block edit Sales
        // <div class="row tm-edit-product-row">
        // <div class="col-xl-6 col-lg-6 col-md-12">
        form#editSale(action=`/edit_sale/${sale._id}` method='POST' name='edit_sale')
          // <div class="form-group mb-3">
          div
            label(for='produceName') Produce Name:
            select#produceName(name='producename' required='')
              option(value='' disabled='' selected='') Select Produce
              each produce in produceList
                option(value=produce._id selected=produce._id == sale.producename ? 'selected' : '') #{produce.producename}
          div
            label(for='produceType') Produce Type:
            input#produceType(type='text' name='produceType' value=sale.produceType)
            span#produceTypeError.error
          div
            label(for='tonnage') Tonnage (in kgs):
            input#tonnage(type='number' name='saleTonnage' value=sale.tonnage)
            span#tonnageError.error
          div
            label(for='amountPaid') Amount Paid (in UGX):
            input#amountPaid(type='number' name='amountPaid' value=sale.amountPaid)
            span#amountPaidError.error
          div
            label(for='buyerName') Buyer&apos;s Name:
            input#buyerName(type='text' name='buyerName' value=sale.buyerName)
            span#buyerNameError.error
          div
            label(for='salesAgent') Sales Agent&apos;s Name:
            select#salesAgentName(name='salesAgent')
              option(value='' disabled='' selected='') Select Sales Agent
              each agent in agents
                option(value=agent._id selected=agent._id == sale.salesAgent ? 'selected' : '') #{agent.username}
            span#salesAgentNameError.error
          div
            label(for='Salesdate') Date and Time:
            input#dateTime(type='datetime-local' name='Salesdate' value=sale.Salesdate)
            span#dateTimeError.error
          div
            label(for='branch') Branch Name:
            select#branch(name='storeBranch' required='')
              option(value='' disabled='' selected='') Select Branch
              option(value='Matuga' selected=sale.branch === 'Matuga' ? 'selected' : '') Matuga
              option(value='Mganjo' selected=sale.branch === 'Mganjo' ? 'selected' : '') Mganjo
            span#branchError.error
          button(type='submit') Update Sale
        




